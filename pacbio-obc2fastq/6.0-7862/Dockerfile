FROM rockylinux:8.9.20231119

ARG OCB2FASTQ_VER=6.0.0

RUN dnf upgrade -y && \
    dnf install -y wget && \
    wget https://downloads.pacbcloud.com/public/software/installers/obc2fastq-${OCB2FASTQ_VER}-Linux.rpm &&\
    dnf install -y obc2fastq-${OCB2FASTQ_VER}-Linux.rpm && \
    rm obc2fastq-${OCB2FASTQ_VER}-Linux.rpm && \
    dnf remove wget -y && dnf autoremove -y

# Create Working Directory
WORKDIR /data


#=====================================================================================
